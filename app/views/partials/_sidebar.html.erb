

<% if params[:controller] == 'about' %>

<div class="card text-white bg-info mb-3" style="max-width: 18rem;">
  <div class="card-header">Location Info</div>
  <div class="card-body">
    <h5 class="card-title">The Bookstore</h5>
    <p class="card-text">499 Massachusetts Ave, Unit 2<br>Boston, MA 02110<br>Phone: (617) 555-5555<br>Email: support@thebookstore.com</p>
  </div>
</div>

 <% end %>



<% if params[:controller] == 'books' && (params[:action] == 'index' || params[:action] == 'show') %>

 <div class="list-group">
 	<% @categories.each do |category| %>
 	 	<%= link_to category.name, category_path(category.id), class:'list-group-item list-group-item-action' %>
 	<% end %>
</div>

<% end %>